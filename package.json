{
  // Package metadata
  "name": "daoframework",
  "version": "1.0.0",
  "description": "DAOFramework - A TypeScript implementation",
  "main": "dist/index.js",
  
  // Build and run scripts
  "scripts": {
    "build": "tsc", // Compile TypeScript code
    "start": "node dist/index.js", // Run compiled code
    "dev": "ts-node src/index.ts", // Run TypeScript code in development mode
    "test": "jest", // Run tests
    "clean": "rm -rf dist" // Clean up compiled files
  },
  
  // Author and licensing information
  "author": "mpermar082",
  "license": "MIT",
  
  // Production dependencies
  "dependencies": {
    "minimist": "^1.2.0" // Command-line argument parser
  },
  
  // Development dependencies
  "devDependencies": {
    "typescript": "^5.0.0", // TypeScript compiler
    "@types/node": "^18.0.0", // TypeScript definitions for Node.js
    "@types/minimist": "^1.2.0", // TypeScript definitions for minimist
    "ts-node": "^10.0.0", // TypeScript execution environment
    "jest": "^29.0.0", // Unit testing framework
    "@types/jest": "^29.0.0" // TypeScript definitions for Jest
  }
}